\newcommand{\writeall}{
		\ifthenelse{\equal {\name} {} }{

		}{
			\section*{ \name }
		}
		\ifthenelse{\equal{\result}{}}{

		}{
		\paragraph{Result}	
		\begin{paragraph}
			\noindent
			\result
			\end{paragraph}
		}
		\ifthenelse{\equal{\proof}{}}{

		}{
			\paragraph{Proof}
			\begin{paragraph}
			\noindent
			\proof
			\end{paragraph} 
		}
		\ifthenelse{\equal{\definition}{}}{

		}{
			\paragraph{Definition}
			\begin{paragraph}
			\noindent
			\definition
			\end{paragraph}
		}
}	
